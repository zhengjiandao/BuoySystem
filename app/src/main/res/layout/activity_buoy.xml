<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bilv"
    tools:context=".BuoyActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/b2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="60sp"/>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/b2_time"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/view1"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#4000"/>

    <LinearLayout
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_below="@+id/view1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">
        <LinearLayout
            android:id="@+id/linear2_1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/b1_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="浮标1"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear2_1"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/linear2_1"
            android:gravity="center"
            android:background="@drawable/text_view_border"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/b1_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#ffff"/>
            <TextView
                android:id="@+id/b1_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffff"/>
            <TextView
                android:id="@+id/b1_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textColor="#ffff"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="20dp"
        android:background="#4000"/>

    <LinearLayout
        android:id="@+id/linear3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/linear2">

        <LinearLayout
            android:id="@+id/linear3_1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/b2_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="浮标2"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear3_1"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/linear3_1"
            android:gravity="center"
            android:background="@drawable/text_view_border"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/b2_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#ffff"/>
            <TextView
                android:id="@+id/b2_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffff"/>
            <TextView
                android:id="@+id/b2_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textColor="#ffff"/>
        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>

            <Button
                android:id="@+id/btn_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:00"/>
            <Button
                android:id="@+id/btn_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00"/>

            <Button
                android:id="@+id/btn_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:00"/>

            <Button
                android:id="@+id/btn_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:00"/>
            <Button
                android:id="@+id/btn_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00"/>
            <Button
                android:id="@+id/btn_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00"/>
            <Button
                android:id="@+id/btn_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"/>
            <Button
                android:id="@+id/btn_08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"/>
            <Button
                android:id="@+id/btn_09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"/>
            <Button
                android:id="@+id/btn_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"/>
            <Button
                android:id="@+id/btn_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00"/>
            <Button
                android:id="@+id/btn_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"/>
            <Button
                android:id="@+id/btn_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00"/>
            <Button
                android:id="@+id/btn_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00"/>
            <Button
                android:id="@+id/btn_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"/>
            <Button
                android:id="@+id/btn_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00"/>
            <Button
                android:id="@+id/btn_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:00"/>
            <Button
                android:id="@+id/btn_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"/>
            <Button
                android:id="@+id/btn_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00"/>
            <Button
                android:id="@+id/btn_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00"/>
            <Button
                android:id="@+id/btn_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00"/>
            <Button
                android:id="@+id/btn_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"/>
            <Button
                android:id="@+id/btn_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:00"/>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>